<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI_Learn.Views.Ex3Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI_Learn.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="0" TargetType="Border">
            <Setter Property="BorderBrush" Value="Red" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
        <Style
            x:Key="1"
            BasedOn="{StaticResource 0}"
            TargetType="Border">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="400" />
        </Style>
        <Style
            x:Key="2"
            BasedOn="{StaticResource 0}"
            TargetType="Border">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="100" />
        </Style>
    </Page.Resources>
    <Grid ColumnSpacing="10" RowSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Style="{StaticResource 0}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="2"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="2"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="2"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
            </Grid>
        </Border>
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Width="200"
            Padding="10"
            Style="{StaticResource 0}">
            <Canvas>
                <Border
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Width="100"
                    Height="70"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
                <Border
                    Canvas.Left="30"
                    Canvas.Top="50"
                    Width="100"
                    Height="50"
                    Style="{StaticResource 0}">
                    <TextBlock>some text</TextBlock>
                </Border>
            </Canvas>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Padding="10"
            Style="{StaticResource 0}">
            <Border
                Width="100"
                Height="100"
                Style="{StaticResource 0}">
                <TextBlock>some text</TextBlock>
            </Border>
        </Border>
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Click="Button_Click">
            Quay lai
        </Button>
    </Grid>
</Page>
