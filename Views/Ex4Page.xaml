<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI_Learn.Views.Ex4Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI_Learn.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="White">
        <!--
            Define the row/column structure:
            - Row 0: Header (Auto height)
            - Row 1: Content area (* takes remaining space)
            - Row 2: Footer (Auto height)
            We also add columns for the navigation panel on the left (fixed or Auto width)
            and the remaining space for content on the right.
        -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Header  -->
            <RowDefinition Height="*" />
            <!--  Content  -->
            <RowDefinition Height="Auto" />
            <!--  Footer  -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!--  Navigation (fixed width, for example 200)  -->
            <ColumnDefinition Width="*" />
            <!--  Main content expands to fill  -->
        </Grid.ColumnDefinitions>

        <!--  HEADER (spans 2 columns, row 0)  -->
        <Border
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Padding="12"
            Background="#FFFF5F5F"
            BorderBrush="Black"
            BorderThickness="5">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Foreground="Black"
                Text="Header" />
        </Border>

        <!--  NAVIGATION (row 1, col 0)  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Padding="12"
            Background="#FF99FF99"
            BorderBrush="Black"
            BorderThickness="5">
            <StackPanel>
                <TextBlock Margin="0,0,0,10" Text="Nav Item 1" />
                <TextBlock Margin="0,0,0,10" Text="Nav Item 2" />
                <TextBlock Margin="0,0,0,10" Text="Nav Item 3" />
            </StackPanel>
        </Border>

        <!--  MAIN CONTENT (row 1, col 1)  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Padding="12"
            Background="#FFFFC78C"
            BorderBrush="Black"
            BorderThickness="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--
                    Content example:
                    - A “big box” on the left (could be an image, etc.)
                    - Some text lines on the right
                -->


                <!--  Text Content  -->
                <StackPanel Grid.Column="1" Spacing="8">
                    <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />
                    <TextBlock Text="Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />
                    <TextBlock Text="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi." />
                    <TextBlock Text="Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia." />
                </StackPanel>
            </Grid>
        </Border>

        <!--  FOOTER (spans 2 columns, row 2)  -->
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Padding="12"
            Background="#FF88E8E8"
            BorderBrush="Black"
            BorderThickness="5">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                Foreground="Black"
                Text="Footer" />
        </Border>
        <Button Click="Button_Click">Quay lai</Button>
    </Grid>
</Page>
